<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sym.labo3.labo3">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NFCActivity"
            android:label="@string/title_activity_nfc"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CodeBarresActivity"
            android:label="@string/title_activity_code_barres"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".BeaconActivity"
            android:label="@string/title_activity_beacon"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CapteursActivity"
            android:label="@string/title_activity_capteurs"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>